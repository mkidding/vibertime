{
  "name": "vibertime",
  "displayName": "Viber Time",
  "description": "A Cyberpunk-themed Developer Wellness Monitor",
  "icon": "icon.png",
  "version": "0.2.13",
  "license": "Apache-2.0",
  "publisher": "mkidding",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkidding/vibertime"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibertime.showDashboard",
        "title": "Viber Time: Show Dashboard"
      }
    ],
    "configuration": {
      "title": "Viber Time",
      "properties": {
        "vibertime.bedtime": {
          "type": "string",
          "default": "00:00",
          "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
          "description": "Time of day for the 'Hard Stop' (HH:MM)."
        },
        "vibertime.softNudgeMinutes": {
          "type": "number",
          "default": 30,
          "description": "Minutes before bedtime to show the warning."
        },
        "vibertime.autoSnoozeMinutes": {
          "type": "number",
          "default": 60,
          "description": "Minutes to wait if the alert is dismissed."
        },
        "vibertime.aiThreshold": {
          "type": "number",
          "default": 20,
          "description": "Character threshold for determining 'AI Pastes'."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "cd webview-ui && npm install && npm run build && cd .. && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "cd webview-ui && npm run build",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}